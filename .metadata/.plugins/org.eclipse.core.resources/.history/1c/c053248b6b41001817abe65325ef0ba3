
/*******************************************************************************************
 * Program: 			 Program to check whether a particular word is containing duplicate
 * 						 character or not.
 * Program Description:  It checks whether the particular string contains a duplicate 
 * 						 character or not.  
 *******************************************************************************************/
package com.training.java;

public class ContainDuplicate 
{
/*******************************************************************************************
* Method Name: 		DuplicateCheck
* Description: 		A method accepts string and checks for duplicate character if found
*  					returns true.
********************************************************************************************/
	 static boolean DuplicateCheck(String arr)
	{
		int i;
		for(i = 0 ; i<arr.length() ; i++)
		{
			for(int j = i+1 ; j < arr.length()-1 ; j++)
				if(arr.charAt(i) == arr.charAt(j));
					return true;
		}
		return false;
		
		
	}
	public static void main(String[] args)
	{
		// A string passed to function for checking the duplicate character.
		String arr = "apple";
		System.out.println(arr +" is "+DuplicateCheck(arr)+"ly containing duplicate");
	}

}
