package com.training.java;

import java.util.Scanner;

public class PalindromeNo

	{
		public static void main(String[] args) 
			{
				
				int number, reverse, var = 0, remainder;
		        Scanner s = new Scanner(System.in);
		        System.out.print("Enter any number: ");  
		        try
		        {
		        number = s.nextInt();
		        reverse = number;
		        	while(number > 0)
		        	{
		            remainder = number % 10;
		            number = number / 10;
		            var = var * 10 + remainder;
		        	}
		        if(var == reverse)
		        	{
		        		System.out.println("Given number "+reverse+" is palindrome");
		        	}
		        else
		        	{
		        		System.out.println("Given number "+reverse+" is not a palindrome");
		        	}
		        }
		        catch(Exception e)
		        {
		        	
		        	System.out.println("Value entered is not a number");
		        }
		   
			}
	}
